{
  "name": "Trade Coin Skills",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "start:optimized": "NODE_ENV=production expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "setup-env": "node ./scripts/setup-env.js",
    "validate-sql": "node ./scripts/validate-sql.js",
    "fix-db-schema": "node ./scripts/fix-database-schema.js",
    "test-dual-balance": "node ./scripts/test-dual-balance.js",
    "deploy-testflight": "node ./scripts/deploy-testflight.js",
    "android": "expo run:android",
    "android:optimized": "NODE_ENV=production expo run:android",
    "ios": "expo run:ios",
    "ios:optimized": "NODE_ENV=production expo run:ios",
    "web": "expo start --web",
    "web:optimized": "NODE_ENV=production expo start --web",
    "build:analyze": "NODE_ENV=production expo export --platform web",
    "test": "jest --watchAll",
    "update:staging": "eas update --branch main --message \"Staging update\"",
    "update:production": "eas update --branch production --message \"Production update\"",
    "publish:staging": "eas update --channel staging --message \"Staging update: $(git log -1 --pretty=format:'%s')\"",
    "publish:production": "eas update --channel production --message \"Production update: $(git log -1 --pretty=format:'%s')\"",
    "build:staging": "eas build --platform all --profile preview",
    "build:production": "eas build --platform all --profile production",
    "build:dev": "node ./scripts/build-dev-client.js",
    "build:dev:ios": "node ./scripts/build-dev-client.js ios",
    "build:dev:android": "node ./scripts/build-dev-client.js android"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/cli": "^18.0.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@reduxjs/toolkit": "^2.7.0",
    "@sentry/react-native": "~7.2.0",
    "@supabase/supabase-js": "^2.50.2",
    "@types/date-fns": "^2.6.3",
    "bip39": "^3.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.0.1",
    "expo": "^54.0.0",
    "expo-application": "~7.0.7",
    "expo-asset": "~12.0.10",
    "expo-blur": "~15.0.7",
    "expo-camera": "~17.0.9",
    "expo-clipboard": "~8.0.7",
    "expo-constants": "~18.0.10",
    "expo-crypto": "~15.0.7",
    "expo-dev-client": "~6.0.18",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-image-manipulator": "~14.0.7",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.9",
    "expo-media-library": "~18.2.0",
    "expo-router": "~6.0.15",
    "expo-secure-store": "~15.0.7",
    "expo-splash-screen": "~31.0.11",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.8",
    "expo-updates": "~29.0.13",
    "expo-web-browser": "~15.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-progress": "^5.0.1",
    "react-native-qrcode-svg": "^6.3.15",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-shimmer-placeholder": "^2.0.9",
    "react-native-svg": "15.12.1",
    "react-native-toast-message": "^2.3.0",
    "react-native-view-shot": "^4.0.3",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.1.10",
    "@types/react-test-renderer": "^18.3.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "depcheck": "^1.4.7",
    "husky": "^8.0.3",
    "jest": "^29.2.1",
    "jest-expo": "~54.0.13",
    "react-test-renderer": "18.3.1",
    "typescript": "~5.9.2"
  },
  "private": true,
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn type-check",
      "yarn lint:fix"
    ]
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "redux-persist",
          "@react-native-community/cli",
          "bip39",
          "date-fns-tz",
          "dotenv",
          "reflect-metadata"
        ],
        "listUnknownPackages": false
      }
    }
  }
}
